{
  "name": "git-commit",
  "version": "1.3.5",
  "description": "提交文件到Git版本控制仓库",
  "main": "./src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build:css": "tailwindcss -i ./src/renderer/css/input.css -o ./dist/tailwind.css  --minify",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": {
    "name": "DDM",
    "email": "22308829@qq.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.10",
    "daisyui": "^5.0.43",
    "electron": "^35.5.1",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^4.1.10"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "diff": "^8.0.2",
    "electron-store": "^8.2.0",
    "simple-git": "*"
  },
  "build": {
    "directories": {
      "output": "out"
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "zip"
      ],
      "category": "Development"
    }
  }
}
