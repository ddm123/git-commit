{
  "name": "git-commit",
  "version": "1.6.10",
  "description": "一个简单的Git提交工具",
  "keywords": ["Git", "Commit"],
  "repository":{
    "type": "git",
    "url": "https://github.com/ddm123/git-commit.git"
  },
  "main": "./src/main/main.js",
  "engines": {
    "node": "^24.11.0",
    "npm": "^11.6.0"
  },
  "scripts": {
    "start": "electron .",
    "build:css": "tailwindcss -i ./src/renderer/css/input.css -o ./dist/css/tailwind.css --minify",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": {
    "name": "DDM",
    "email": "22308829@qq.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.10",
    "daisyui": "^5.5.5",
    "electron": "^39.2.2",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^4.1.17"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "basic-ftp": "^5.0.5",
    "chokidar": "^4.0.3",
    "electron-store": "^8.2.0",
    "progress-stream": "^2.0.0",
    "simple-git": "^3.30.0",
    "ssh2-sftp-client": "^12.0.1"
  },
  "build": {
    "directories": {
      "output": "out"
    },
    "win": {
      "icon": "icon.png",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "icon.png",
      "target": [
        "AppImage",
        "deb",
        "zip"
      ],
      "category": "Development"
    }
  }
}
